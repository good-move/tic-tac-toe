<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="ru.nsu.ccfit.boltava.tictactoe.ui.main.MainActivity"
    android:id="@+id/mainLayout">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/app_name_title"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/playOnlineButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/min_button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="#05C6F7"
        android:text="@string/play_online_btn_text"
        android:textColor="#fff" />

    <Button
        android:id="@+id/playWithBotButton"
        android:layout_width="@dimen/min_button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playOnlineButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorBackgroundBtn"
        android:text="@string/play_with_bot_btn_text"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/openSettingsButton"
        android:layout_width="@dimen/min_button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playWithBotButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="@string/statistics_btn_text"
        android:background="@color/colorBackgroundBtn"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>
