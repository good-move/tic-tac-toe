<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-45"
            >
            <shape android:shape="line">
                <stroke
                    android:width="@dimen/playground_mark_stroke_width"
                    android:color="@color/colorCrossMark" />
                <size
                    android:width="@dimen/playground_mark_size"
                    android:height="@dimen/playground_mark_size" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-45">
            <shape android:shape="line">
                <stroke
                    android:width="@dimen/playground_mark_stroke_width"
                    android:color="@color/colorCrossMark" />
                <size
                    android:width="@dimen/playground_mark_size"
                    android:height="@dimen/playground_mark_size" />
            </shape>
        </rotate>
    </item>
</layer-list>